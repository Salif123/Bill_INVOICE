@page "/counte"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrmentCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrmentCount()
    {
        currentCount++;
        Console.WriteLine("count clicked!"); // Check browser console
        
    }
}
